{
  "name": "rbm-sms-bot",
  "version": "1.0.0",
  "description": "Professional Telegram bot with Node.js and MySQL",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "./build.sh",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "./start-prod.sh",
    "restart:dev": "./restart-bot.sh",
    "restart:prod": "./restart-prod.sh",
    "status": "./status.sh",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "test": "jest"
  },
  "keywords": [
    "telegram",
    "bot",
    "nodejs",
    "mysql",
    "sequelize"
