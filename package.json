    "joi": "^17.12.2",
    "mysql2": "^3.9.1",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.64.0",
    "sequelize": "^6.37.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
